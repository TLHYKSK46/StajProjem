@model  CMS.Areas.Admin.Models.VMHome
    @{
        ViewBag.Title = @CMS.Resources.Dil.anasayfa;
    }
    <div class="row">

        <div class="col-md-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">@CMS.Resources.Dil.kullanicilar</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.KullaniciSayisi</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">@CMS.Resources.Dil.kategoriler</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.KategoriSayisi</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-folder fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">@CMS.Resources.Dil.makaleler</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.MakaleSayisi</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clone fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">@CMS.Resources.Dil.hosgeldiniz</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.KullaniciAdSoyad</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



